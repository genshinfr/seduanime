<!-- short__story -->
<article class="short__story col__xs-12 col__sm-4 col__lg-3 col__lgx-2 grid__item">
	<div class="short__story-inner ">
			<div class="grid__item-bg"></div>
	<header class="short__story-header">
	  <div class="short__story-image">
	  	<figure class="grid__item-wrap"><img class="grid__item-img" src="[xfvalue_image_url_poster]" alt="{title}" /></figure>
	  	[xfgiven_ratingshikimori]<div class="label label__rate">[xfvalue_ratingshikimori]</div>[/xfgiven_ratingshikimori]
	  	<div class="label label__pg">14+</div>
	  	<div class="progress__box"><div class="progress__sm">1 из 12</div></div>
	  </div>
	  <!--<div class="shadow" style="background-image: url('[xfvalue_image_url_poster]');"></div> По желанию расскоментировать-->
	  <a href="{full-link}" class="short__story-btn"><span class="md__icon md-plays"></span></a>
	</header>
	<footer class="short__story-footer grid__item-title">
		<div class="short__story-title">{title}</div>
		<div class="short__rate">
		[rating-type-1]<div class="short__story-rate">{rating}</div>[/rating-type-1]
		<div class="card__short-rate sh__rate">
			<div class="card__short-rate--num">{rating_nums}</div>
		</div>
		</div>
		<div class="short__story-text">{short-story limit="70"}...</div>
	</footer>
	</div>
</article><!-- end short__story -->

<!-- content__item -->
<div class="content__item">
	<div class="content__item-wrp">
		<div class="content__item-intro">
			<img class="content__item-img" src="[xfvalue_image_url_poster]" alt="{title}" />
		</div>
		<div class="fefef">
			<h2 class="content__item-title">{title}</h2>
			<h3 class="content__item-subtitle">"How I learned to cherish life after a trip to hell"</h3>
			<div class="content__item-text">{short-story}</div>
			<a href="{full-link}" class="content__item-btn button">Смотреть онлайн</a>
		</div>
	</div>
</div><!-- end content__item -->
