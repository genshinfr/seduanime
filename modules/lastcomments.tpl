<li class="live__comments-item">
		<div class="live__comments-header">
			[profile]<div class="live__comments--image"><img src="{foto}" alt="{login}"/></div>[/profile]
			[online]<div class="live__comments--online" title="{login} - онлайн"></div>[/online]
			[offline]<div class="live__comments--offline" title="{login} - оффлайн"></div>[/offline]
			<div class="live__comments--author">{author}</div>
			<div class="live__comments--date">{date}</div>
		</div>
		<div class="live__comments-main">
			<div class="live__comments--text">{comment limit="100"}...</div>
		</div>
		<div class="live__comments-bottom"><div class="live__comments--title"><a href="{news-link}" title="{news-title}">{news-title}</a></div></div>
</li>
