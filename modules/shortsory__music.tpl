[xfgiven_playlistm]
<!-- shortstory__item-track -->
 <div class="shortstory__item-track item__track track col__12" data-track="[xfvalue_playlistm]" data-artist="[xfvalue_artist]" data-pic="[xfvalue_pic]" data-title="{title}">
 	<!-- shortstory__item-track--cover -->
 	<div class="shortstory__item-track--cover">
 		<figure><img src="[xfvalue_pic]" alt="{title}" /></figure>
 	</div>
 	<!-- end shortstory__item-track--cover -->
 	<!-- shortstory__item-track--play -->
	<div class="shortstory__item-track--play js__play-m" title="Играть \ остановить">
		<span class="md__icon md-plays"></span>
	</div>
	<!-- end shortstory__item-track--play -->
	<!-- shortstory__item-track--desc -->
	<a class="shortstory__item-track--desc" href="{full-link}">
		<div class="shortstory__item-track--title">{title}</div>
		<div class="shortstory__item-track--subtitle">[xfvalue_artist]</div>
	</a>
	<!-- end shortstory__item-track--desc -->
 </div>
 <!-- end shortstory__item-track -->
[/xfgiven_playlistm]

